<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205dp">

        <!-- Background with gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome "
                android:layout_marginBottom="30dp"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <!-- Profile name -->
            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
               />
        </LinearLayout>



    </RelativeLayout>

    <!-- Contact information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:orientation="vertical">

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_category"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam@gmail.com"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <!-- Phone number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_category"/>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+266 225 225"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ketbanBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_friend"/>

            <TextView
                android:id="@+id/gggg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lời mời kết bạn"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <!-- Add to group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:paddingLeft="25dp">

            <CheckBox
                android:id="@+id/cbBoxBiometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận vân tay trên thiết bị"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnTrello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Project"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtChangePass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đổi mật khẩu"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            />


    </LinearLayout>

    <!-- Follow button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Log out"
        android:textColor="#fff"/>

</LinearLayout>
